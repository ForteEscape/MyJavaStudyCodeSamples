		pn.add(pn3);
		pn.add(pn4);
		pn.add(pn5);
		
		pn1.add(lb1);
		pn2.add(lb2);
		pn3.add(lb3);
		pn4.add(lb4);
		pn4.add(resultLabel);
		pn5.add(resultBtn);
		
		for(int i = 0; i<chk.length; i++) {
			pn2.add(chk[i]);
		}
		
		pn3.add(rbMale);
		pn3.add(rbFemale);
		
		myJFrame.setContentPane(pn);
