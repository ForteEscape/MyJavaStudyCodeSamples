package com.sehun.problem2;

import java.awt.FlowLayout;
import java.awt.GridLayout;
import java.awt.event.ActionEvent;
import java.awt.event.ActionListener;
import java.awt.event.ItemEvent;
import java.awt.event.ItemListener;

import javax.swing.ButtonGroup;
import javax.swing.JButton;
import javax.swing.JCheckBox;
import javax.swing.JFrame;
import javax.swing.JLabel;
import javax.swing.JPanel;
import javax.swing.JRadioButton;

public class Problem2 {
	public static void main(String[] args) {
		
		String language1;
		String language2;
		String language3;
		
		Boolean islanguage1 = false;
		Boolean islanguage2 = false;
		Boolean islanguage3 = false;
		
		JFrame myJFrame = new JFrame("This is Frame");
		JPanel pn = new JPanel();
		JPanel pn1 = new JPanel();
		JPanel pn2 = new JPanel();
		JPanel pn3 = new JPanel();
		JPanel pn4 = new JPanel();
		JPanel pn5 = new JPanel();
		JButton resultBtn = new JButton();
		
		JLabel lb1 = new JLabel();
		JLabel lb2 = new JLabel();
		JLabel lb3 = new JLabel();
		JLabel lb4 = new JLabel();
		JLabel resultLabel = new JLabel();
		
		JCheckBox[] chk = new JCheckBox[3];
		
		JRadioButton rbMale = new JRadioButton("남자");
		JRadioButton rbFemale = new JRadioButton("여자");
		
		ButtonGroup bg = new ButtonGroup();
		bg.add(rbMale);
		bg.add(rbFemale);
		
		for(int i = 0; i<3; i++) {
			chk[i] = new JCheckBox();
		}
		
		chk[0].setText("C");
		chk[1].setText("C++");
		chk[2].setText("java");
		
		chk[0].addItemListener(new ItemListener() {
			
			@Override
			public void itemStateChanged(ItemEvent e) {
				language1 = chk[0].getText();
				islanguage1 = true;
			}
		});
		
		chk[1].addItemListener(new ItemListener() {
			
			@Override
			public void itemStateChanged(ItemEvent e) {
				language2 = chk[1].getText();
				islanguage2 = true;
			}
		});
		
		chk[2].addItemListener(new ItemListener() {
			
			@Override
			public void itemStateChanged(ItemEvent e) {
				language3 = chk[2].getText();
				islanguage3 = true;
			}
		});
		
		resultBtn.addActionListener(new ActionListener() {
			
			@Override
			public void actionPerformed(ActionEvent e) {
				
			}
		});
		
		resultBtn.setText("결과출력");
		
		lb1.setText("설문조사지 입니다.");
		lb2.setText("1.경험한 언어: ");
		lb3.setText("2.성별을 적어주세요: ");
		lb4.setText("결과:");
		
		GridLayout gl = new GridLayout(5,1);
		
		pn.setLayout(gl);
		
		pn.add(pn1);
		pn.add(pn2);
		pn.add(pn3);
		pn.add(pn4);
		pn.add(pn5);
		
		pn1.add(lb1);
		pn2.add(lb2);
		pn3.add(lb3);
		pn4.add(lb4);
		pn4.add(resultLabel);
		pn5.add(resultBtn);
		
		for(int i = 0; i<chk.length; i++) {
			pn2.add(chk[i]);
		}
		
		pn3.add(rbMale);
		pn3.add(rbFemale);
		
		myJFrame.setContentPane(pn);
		myJFrame.setSize(800, 800);
		myJFrame.setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
		myJFrame.setVisible(true);
	}
}
